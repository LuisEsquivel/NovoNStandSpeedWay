
@{
    ViewBag.Title = "Usuarios";
}


<script src="~/Scripts/Generals.js"></script>
<script src="~/Scripts/Jquery Form Steps/js/sweetalert.min.js"></script>
<script src="~/Scripts/MiPerfil.js"></script>


@model IEnumerable<Web.Models.Usuario>


<style>
    #trsGen:hover {
        background: #FCFFC9;
    }
</style>


<div>
    <h5 style="display:none;" class="ml-2" id="Titulo">Mi Perfil</h5>
</div>


<div id="container">

</div>




<!-- Modal -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title" id="ModalTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>


            <form method="post" id="form" class="border border-right-0 border-left-0 border-secondary rounded pt-5 pb-5">

                <div class="modal-body">

                    <div class="form-group">
                        <input class="form-control" id="UsuarioIdInt" name="UsuarioIdInt" placeholder="Id" readonly />
                    </div>

                    @using Web.Helpers;
                    @{
                        var g = new Generals();
                        if (g.IsAdmin())
                        {

                            <div class="col-sm-12 text-center" id="DivIsActive">
                                <label for="ActivoBit">
                                    <input type="checkbox" id="ActivoBit" name="ActivoBit" />
                                    <span>Activo</span>
                                </label>
                            </div>



                            <div class="col-sm-12 text-center">
                                <label for="EsAdminBit">
                                    <input type="checkbox" id="EsAdminBit" name="EsAdminBit" />
                                    <span>Admin</span>
                                </label>
                            </div>
                        }


                        <input hidden type="text" id="VengoDeMiPerfil" name="VengoDeMiPerfil" value="true" />
                        <input hidden type="text" id="IsActive" name="IsActive" value="true" />
                        <input hidden type="text" id="EsAdmin" name="EsAdmin" value="false" />

                    }



                    <div class="form-row">
                        <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12 mt-3">
                            <label for="NombreVar">Nombre</label>
                            <input type="text" class="form-control" id="NombreVar" name="NombreVar" placeholder="Nombre" required maxlength="100" />
                        </div>
                    </div>




                    @{
                        if (g.IsAdmin())
                        {
                            <div class="form-row">
                                <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12 mt-3">
                                    <label>Rol</label>
                                    <select class="form-control" id="RolIdInt" name="RolIdInt" required></select>
                                </div>
                            </div>
                        }


                    }



                </div>



                <div class="modal-footer">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center mt-5">
                        <button type="submit" class="btn btn-primary" id="BtnAdd" onclick="Add();">Guardar</button>
                        <button type="submit" class="btn btn-primary" id="BtnUpdate" onclick="Add();">Actualizar</button>
                        <button type="button" class="btn btn-secondary" id="BtnCancelar" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>


