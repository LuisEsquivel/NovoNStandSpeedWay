

<script src="~/Scripts/Jquery Form Steps/js/sweetalert.min.js"></script>

<br />

<div class="row justify-content-center">

    <form id="frmRegister" class="col-md-5 col-lg-3 container" method="POST">

        <div class="row pt-2 pb-2" style="border:2px lightgray solid; border-radius:5px;">

            <input hidden type="text" id="IsActive" name="IsActive" value="true" />
            <input hidden type="text" id="GoogleAccount" name="GoogleAccount" value="false" />

            <div class="form-group col-md-12">
                <label>Nombre</label>
                <input class="form-control" id="NombreVar" type="text" name="NombreVar" required placeholder="Nombre">
            </div>

            <div class="form-group col-md-12">
                <label>Email</label>
                <input class="form-control" id="UsuarioVar" type="email" name="UsuarioVar" required placeholder="Correo Electrónico">
            </div>

            <div class="form-group col-md-12">
                <label>Contraseña</label>
                <input class="form-control" id="Password" type="password" name="Password" required placeholder="Contraseña">
            </div>

            <input type="submit" value="Registrarse" class="btn btn-primary container mt-3" style="width:50%;" onclick="Register();" />

        </div>

        <br />
        <div id="container" class="mt-3">

        </div>

    </form>


</div>
