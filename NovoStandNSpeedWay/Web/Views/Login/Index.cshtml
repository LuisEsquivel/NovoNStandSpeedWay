                <label>Email</label>
                <input class="form-control" id="UsuarioVar" type="email" name="UsuarioVar" required placeholder="Correo Eléctronico">
            </div>

            <div class="form-group col-sm-12">
                <label>Contraseña</label>
                <input class="form-control" id="Password" type="password" name="Password" required placeholder="Contraseña">
            </div>


            <input type="submit" value="Acceder" class="btn btn-primary container mt-3" style="width:50%;" onclick="Login();" />

            <a href="/Registrarse/OlvideContraseña" class="pt-5 pl-3" style="width:100%;">Olvidé Mi Contaseña</a>


        </div>


        <div id="container" class="mt-3">

        </div>


    </form>



</div>


