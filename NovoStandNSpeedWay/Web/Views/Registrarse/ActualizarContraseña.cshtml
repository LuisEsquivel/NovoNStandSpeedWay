<div class="row justify-content-center">

    <form id="frmUpdatePassord" class="col-md-5 col-lg-3 container" method="POST">

        <h4>Actualizar Contraseña</h4>

        <div class="row pt-2 pb-2" style="border:2px lightgray solid; border-radius:5px;">

            <div class="form-group col-sm-12">
                <label>Contraseña</label>
                <input class="form-control" id="Password" type="password" name="Password" required placeholder="Contraseña">
            </div>

            <div class="form-group col-sm-12">
                <label>Confirmar Contraseña</label>
                <input class="form-control" id="ConfirmPassword" type="password" name="ConfirmPassword" required placeholder="Confirmar Contraseña">
            </div>

            @using Web.Controllers;
            @{ HomeController hc = new HomeController();
                var email = System.Web.HttpContext.Current.Request.Cookies[hc.CockieName].Value.ToString();
             }

            <div class="form-group col-sm-12">
                <label>Introduce el código de verificación que enviamos al correo: @email</label>
                <input class="form-control" id="CodigoDeVerificacionVar" type="text" name="CodigoDeVerificacionVar" required placeholder="Código De Verificación" maxlength="10">
            </div>

            <input type="submit" value="Acceder" class="btn btn-primary container mt-3" style="width:50%;" onclick="UpdatePassword();" />

        </div>


        <div id="container" class="mt-3">

        </div>


        <br /><br />

    </form>


</div>



